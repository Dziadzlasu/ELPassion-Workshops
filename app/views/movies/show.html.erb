<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <img src="<%= @movie.poster %>"/>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.average_rating %>
</p>

<p>
  <% (1..10).each do |value| %>
    <%= link_to value, ratings_path(value: value, movie_id: @movie.id), method: :post %>
  <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
